{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "alwaysStrict": true
    },
    "include": ["src/**/*"]
}